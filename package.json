{
    "name": "sladdactle-cli",
    "version": "1.0.0",
    "description": "",
    "type": "module",
    "main": "src/index.js",
    "scripts": {
        "build": "npm run build:js && npm run build:css",
        "build:js": "esbuild --bundle --minify js/redactle.js --outfile=public/js/redactle.js",
        "build:css": "postcss css --dir public/css",
        "compress:brotli": "brotli -kfZ public/css/*.css public/js/*.js public/index.html",
        "start": "node src/index.js",
        "dev": "node --watch src/index.js",
        "lint": "eslint -- src/ js/",
        "test": "NODE_ENV=test ava"
    },
    "engine": {
        "node": ">=22"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "date-fns": "^4.1.0",
        "emoji-regex": "^10.1.0",
        "ioredis": "^5.2.3",
        "lodash.chunk": "^4.2.0",
        "node-fetch": "^3.2.10",
        "parse5": "^8.0.0",
        "parse5-html-rewriting-stream": "^8.0.0",
        "rehype-parse": "^9.0.1",
        "rehype-sanitize": "^6.0.0",
        "rehype-stringify": "^10.0.1",
        "sqlite3": "^5.0.11",
        "unified": "^11.0.5",
        "unist-util-filter": "^5.0.1",
        "ws": "^8.8.1"
    },
    "devDependencies": {
        "@types/ioredis": "^4.28.10",
        "ava": "^6.0.1",
        "cssnano": "^7.1.1",
        "esbuild": "^0.25.10",
        "eslint": "^9.37.0",
        "eslint-plugin-security": "^3.0.1",
        "esmock": "^2.0.5",
        "get-port": "^7.1.0",
        "ioredis-mock": "^8.2.2",
        "postcss": "^8.4.16",
        "postcss-cli": "^11.0.1",
        "postcss-preset-env": "^10.4.0"
    },
    "browserslist": [
        "cover 95% in NO and last 1 year"
    ]
